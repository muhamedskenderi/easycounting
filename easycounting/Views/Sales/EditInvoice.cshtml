<script>
    var totalItems = @rows;


    var isEmptyTax = @(emptyTax);
    var isPaid = @(paid);
    var discount = @(Model.discount);
      var invoiceID = @invoiceID;
    window.onload = function () {


        $("#customersList").val(@ViewBag.chosenCustomer);
        if (isEmptyTax === false) {
                 var taxID = @(taxID);
                 initialTax(taxID);
                 $("#editTaxSection").show();
                 $("#addTaxSection").hide();
              }
             else {
                 $("#ddtaxID").prepend("<option value='0' selected='selected'>Choose tax</option>");
                 $("#taxID").val(0);
                $("#editTaxSection").hide();
                $("#addTaxSection").show();
                }


            

            $.ajax({
            type: "Get",
            url: '@Url.Action("GetInvoiceDetails", "Sales")',
                data: { id: invoiceID },
            dataType: "json",
              success: function (data) {
                  $("#customerName").text(data[0]);
                  $("#customerAddress").text(data[1]);
                  $("#customerTaxNo").text(data[2]);
                  $("#customerPhone").text(data[3]);
                  $("#customerEmail").text(data[4]);

                  $("#invoiceStatus").val(data[5]);
                  $("#expenseID").val(data[6]);
                  $("#invoiceNo").val(data[7]);

                  $("#invoiceDate").val(data[8]);
                  $("#dueDate").val(data[9]);

                  $("#total").val(data[10]);
                  $("#notes").val(data[11]);

                  if ($("#invoiceStatus").val() === "Paid")
                      $('#invoiceStatus').prop('disabled', 'disabled');

            }
            });

        if (totalItems > 1) {

            for (var i = 1; i <= totalItems; i++) {
                firstScript(invoiceID);

            }

            setTimeout(priceUpdater, 500);
        }
        else { setTimeout(priceUpdater, 500); }



        if (discount != 0) {
            $("#discount").val(parseInt(discount) + "%");
            $("#discountValue").val(parseInt(discount));
            $("#editDiscountSection").show();
            $("#addDiscountSection").hide();

        }
        else {
            $("#editDiscountSection").hide();
            $("#addDiscountSection").show();
        }



    };



