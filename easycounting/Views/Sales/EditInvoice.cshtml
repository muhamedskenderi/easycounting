@{
    ViewBag.Title = "Edit Invoice";
    Layout = "~/Views/Shared/Menu.cshtml";

    DbEnt db = new DbEnt();
    int companyID = ViewBag.companyID;
    int invoiceID = Convert.ToInt32(Model.invoiceID);
    int taxID = Convert.ToInt32(Model.taxID);
    var rows = db.ItemsInInvoices.Where(x => x.invoiceID == invoiceID).Count();
    var row = db.ItemsInInvoices.Where(x => x.invoiceID == invoiceID).ToList();
    int n = 1;
    int taxValue = 0;
    string emptyTax = "true";
    string paid = "false";
    if (Model.taxID != null || Model.taxID.HasValue == true)
    {
        emptyTax = "false";
        int givenTaxId = taxID;
        var taxRow = db.Taxes.Where(x => x.taxID == givenTaxId).SingleOrDefault();
        taxValue = taxRow.value;

    }
    if (Model.status == "Paid")
    {
        paid = "true";
    }


}

