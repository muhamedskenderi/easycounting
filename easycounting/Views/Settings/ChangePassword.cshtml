@model easycounting.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/Menu.cshtml";
}



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


<div class="">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="page-title">Settings</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">Profile Settings</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-4">

            <!-- Settings Menu -->
            <div class="widget settings-menu">
                <ul>
                    <li class="nav-item">
                        <a href="@Url.Action("","settings")" class="nav-link ">
                            <i class="far fa-user"></i> <span>Profile Settings</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("itemcategories","settings")" class="nav-link">
                            <i class="fas fa-list"></i> <span>Item Category</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("taxes","settings")" class="nav-link">
                            <i class="far fa-check-square"></i> <span>Tax Types</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("sales","settings")" class="nav-link">
                            <i class="far fa-list-alt"></i> <span>Sale Category</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("expenses","settings")" class="nav-link">
                            <i class="far fa-list-alt"></i> <span>Expense Category</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("changepassword","settings")" class="nav-link active">
                            <i class="fas fa-unlock-alt"></i> <span>Change Password</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("deleteaccount","settings")" class="nav-link">
                            <i class="fas fa-ban"></i> <span>Delete Account</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /Settings Menu -->

        </div>

        <div class="col-xl-9 col-md-8">

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Basic information</h5>
                </div>
                <div class="card-body">

                    <!-- Form -->

                    @using (Html.BeginForm())
                    {



                        <div class="row form-group">
                            <label for="addressline1" class="col-sm-3 col-form-label input-label">Current Password</label>
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label for="addressline1" class="col-sm-3 col-form-label input-label">New Password</label>
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label for="email" class="col-sm-3 col-form-label input-label">Confirm New Password</label>
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>




                        if (ViewBag.Status == true && ViewBag.Message != "")
                        {

                <div class="row form-group">
                    <div class="alert alert-success" id="successMessage" role="alert">
                        @ViewBag.Message
                    </div>
                    <br />


                    <div class="panel-footer row">
                        <!-- panel-footer -->
                        <div class="col-xs-6 text-left">
                            <div class="previous">
                                <a href="@Url.Action("","home")" class="btn btn-primary btn-sm">Keep me signed in</a>

                            </div>
                        </div>
                        <div class="col-xs-6 text-right">
                            <div class="next">
                                <a href="@Url.Action("logout","account")" class="btn btn-outline-primary btn-sm"> Log me out</a>

                            </div>
                        </div>
                    </div><!-- end panel-footer -->

                    
                </div>
                        }

                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <div class="text-right">
                            <input type="submit" class="btn btn-primary" value="Save Changes" />
                        </div>
                        <!-- /Form -->
                    }



                </div>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">

  

    $(function () {
        // setTimeout() function will be fired after page is loaded
        // it will wait for 5 sec. and then will fire
        // $("#successMessage").hide() function
        setTimeout(function () {
            $("#successMessage").hide('blind', {}, 500)
        }, 5000);
    });
</script>




