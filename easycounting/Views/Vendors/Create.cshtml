@model easycounting.Models.Vendor

@{
    ViewBag.Title = "Create Vendor";
    Layout = "~/Views/Shared/Menu.cshtml";

}





<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <h3 class="page-title">Customers</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="customers.html">Vendors</a></li>
                <li class="breadcrumb-item active">Create Vendors</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Info</h4>
                @using (Html.BeginForm())
                {
                    <div class="row">


                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Name</label>
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Tax No</label>
                                @Html.EditorFor(model => model.taxNo, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Account Number</label>
                                @Html.EditorFor(model => model.bankNo, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                            </div>
                            <div class="alert-warning" id="error">
                                Account numbers should contain 10 or 12 digitis.
                            </div>
                        </div>

                    </div>

                    <div class="row">


                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Email</label>
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Phone</label>
                                @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Address</label>
                                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                            </div>
                        </div>

                    </div>

                    <div class="text-right mt-4">
                        <button type="submit" class="btn btn-primary">Create Vendor</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#bankNo").attr('maxlength', '12');
        $("#error").hide();


        $("input[name=bankNo]").on("blur", function (e) {
            var myval = $(this).val();

            if (myval.length !== 10 && myval.length !== 12 ) {

                $(':input[type="submit"]').prop('disabled', true);
                $("#error").show();
            }
            else {
                $("#error").hide();

                $(':input[type="submit"]').prop('disabled', false);

            }
        });

    });



</script>